<%= form_with(model: [:practice, room_feature], local: true) do |form| %>
  <% if room_feature.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feature.errors.count, "error") %> prohibited this feature from being saved:</h2>

      <ul>
        <% room_feature.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="field form-group col-lg-3 col-md-4 col-sm-12">
      <%= form.label :name %>
      <%= form.text_field :name, :class => 'form-control', :required => true %>
    </div>

    <div class="col-lg-8 col-md-8 col-sm-12">
      <label for="active">Actif:</label>
      <div class="onoffswitch">
        <%= form.check_box :active, class: 'onoffswitch-checkbox', id: 'active' %>
        <label class="onoffswitch-label" for='active'>
          <span class="onoffswitch-inner"></span>
          <span class="onoffswitch-switch"></span>
        </label>
      </div>
    </div>
  </div>

  <div class="actions m-t">
    <%= link_to 'Retour', parameters_practice_parameters_path + "#tab-5", :class => 'btn btn-primary' %>
    <%= form.submit "Sauvegarder", :class => 'btn btn-primary' %>
  </div>
<% end %>