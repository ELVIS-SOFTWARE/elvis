<div class="row wrapper border-bottom white-bg page-heading m-b-md">
    <h2>Genres musicaux</h2>
    <%= link_to 'Nouveau genre musical', new_practice_music_genre_path, :class => 'btn btn-primary pull-right' %>
</div>

<p id="notice"><%= notice %></p>

<table class="table table-bordered bg-white">
    <thead>
        <tr>
            <th>Nom</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @music_genres.each do |music_genre| %>
        <tr>
            <td><%= music_genre.name %></td>
            <td><%= link_to 'Éditer', edit_practice_music_genre_path(music_genre), :class => 'btn btn-primary' %></td>
            <td><%= link_to 'Supprimer', practice_music_genre_path(music_genre), method: :delete, data: { confirm: 'Êtes vous sur ?' }, :class => 'btn btn-primary' %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>
