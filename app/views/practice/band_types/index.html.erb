<div class="row wrapper border-bottom white-bg page-heading m-b-md">
    <h2>Types de groupes</h2>
    <%= link_to 'Nouveau type de groupe', new_practice_band_type_path, :class => 'btn btn-primary pull-right' %>
</div>

<p id="notice"><%= notice %></p>

<table class="table table-bordered bg-white">
  <thead>
    <tr>
      <th>Nom</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @band_types.each do |band_type| %>
      <tr>
        <td><%= band_type.name %></td>
        <td><%= link_to 'Éditer', edit_practice_band_type_path(band_type), :class => 'btn btn-primary' %></td>
        <td><%= link_to 'Supprimer', [:practice, band_type], method: :delete, data: { confirm: 'Êtes vous sur ?' }, :class => 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>