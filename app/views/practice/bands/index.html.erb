<div class="row wrapper border-bottom white-bg page-heading m-b-md">
    <h2>Groupes</h2>
    <%= link_to 'Créer groupe', new_practice_band_path, :class => 'btn btn-primary pull-right'  %>
</div>

<p id="notice"><%= notice %></p>

<table class="table table-bordered bg-white">
  <thead>
    <tr>
      <th>Groupe</th>
      <th>Type</th>
      <th>Genre musical</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @bands.each do |band| %>
      <tr>
        <td><%= band.name %></td>
        <td><%= band.band_type.name %></td>
        <td><%= band.music_genre.name %></td>
        <td><%= link_to 'Voir', [:practice, band], :class => 'btn btn-primary'  %></td>
        <td><%= link_to 'Éditer', edit_practice_band_path(band), :class => 'btn btn-primary'  %></td>
        <td><%= link_to 'Supprimer', [:practice, band], method: :delete, data: { confirm: 'Êtes vous sur ?' }, :class => 'btn btn-primary'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>