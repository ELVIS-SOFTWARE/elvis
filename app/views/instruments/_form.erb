<%= form_with scope: :instrument, model: @instrument, local: true, multipart: false do |f| %>
  <% unless @errors.nil? %>
    <div class="bg-danger m-b-sm img-rounded color-black p-h-xs">
      <ul>
        <% @errors.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Nom_de_l\'instrument" %><br />
    <%= f.text_field :label, autofocus: true, id: "label", class: "form-control", required: true, minLength: 3 %>
  </div>

  <div class="form-group">
    <%= f.submit "Sauvegarder", class: "btn btn-primary block full-width m-b" %>
  </div>
<% end %>