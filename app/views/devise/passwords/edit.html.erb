<div class="middle-box text-center loginscreen">
    <div>
        <div>
            <h1 class="logo-name">⚡</h1>
            <br />
            <h2>Changez votre mot de passe</h2>
        </div>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), class: "m-t", html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

              <%= f.hidden_field :reset_password_token %>

              <div class="form-group">
                <%= f.label :password, "Nouveau Mot de Passe" %><br />
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> charactères minimum)</em><br />
                <% end %>
                <%= f.password_field :password, autofocus: true, autocomplete: "off", class: "form-control" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirmation" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
              </div>

            <%= f.submit "Changer mon mot de passe", class: "btn btn-primary block full-width m-b" %>

            <%# <%= render "devise/shared/links" %1> %>
        <% end %>
    </div>
</div>
